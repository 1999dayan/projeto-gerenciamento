<%- include('layout/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SignUp</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>
<body class="body-login">
  <img src="/uploads/logo1.png" alt="Logo" class="verde"> 
  <img src="/uploads/logo2.png" alt="Logo"  class="brabo">
    <div class="form-container">
      <h2 class="titulo">Registrar</h2>
        <form action="/signup" method="post">
          <div class="form-group">
            <label for="name" class="titulo">Nome:</label>
            <input type="text" id="name" name="username" placeholder="Coloque seu nome" required autocomplete="off">
          </div>
          <div class="form-group">
            <label for="password" class="titulo">Senha:</label>
            <input type="password" id="password" name="password" placeholder="Coloque sua senha" required>
          </div>
          <button type="submit" class="submit-btn">Submit</button>
        </form>
      </div>
    
</body>
</html>

