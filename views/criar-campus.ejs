<%- include('layout/header') %>
<link rel="stylesheet" type="text/css" href="/css/style.css" />

<style>
    .custom-form {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 300px;
        margin: 0 auto;
        margin-top: 30px;
    }

    .custom-form label {
        display: block;
        margin-bottom: 10px;
    }

    .custom-form input[type="text"] {
        width: calc(100% - 10px);
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .custom-form button {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 10px;
    font-size: 16px; /* Valor padrão */
    width: auto; /* Valor padrão */
}

@media (max-width: 768px) {
    .custom-form button {
        padding: 8px 16px;
        font-size: 14px;
        width: 70%; /* Largura total do contêiner pai */
    }
}

@media (max-width: 480px) {
    .custom-form button {
        padding: 6px 12px;
        font-size: 12px;
        width: 50%; /* Largura total do contêiner pai */
    }
}
    .custom-form button:hover {
        background-color: #0056b3;
    }
    h3{
        text-align: center;
        margin-top: 100px;
    }
</style>

<body>
    <h3>Criar campus</h3>

    <form action="/criar-campus" method="post" class="custom-form">
        <label for="campo">Nome do campus:</label>
        <input type="text" id="nome" name="nome">
        <button type="submit" id="submitButton" >Criar</button>
    </form>
    <script>
        document.getElementById("submitButton").addEventListener("click", function() {
        alert("Campus criado com sucesso!");});
    </script>
</body>


<%- include('layout/footer') %>
